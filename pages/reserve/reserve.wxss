page {
  background: #f5f5f5;
}

.content {
  width: 700rpx;
  margin-top: 40rpx;
}

.content>view {
  width: 90%;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.content>view>text {
  font-size: 28rpx;
  color: #666;
}

.toGo {
  width: 24rpx;
  height: 24rpx;
  margin-left: 20rpx;
}

.content>view>input {
  width: 80%;
  text-align: right;
  font-size: 28rpx;
  color: #666;
}

.order-btn {
  margin: 0rpx;
  padding: 0rpx;
  width: 90% !important;
  height: 100rpx !important;
  line-height: 100rpx;
  background: #dea482;
  border-radius: 55rpx;
  margin-top: 80rpx;
  margin-bottom: 40rpx;
}
