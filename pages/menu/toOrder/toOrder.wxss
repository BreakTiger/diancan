page {
  background: #f5f5f5;
}

.container>view {
  width: 90%;
  margin-top: 40rpx;
}

.switch-line >view {
  width: 50%;
  line-height: 100rpx;
}

.l-box {
  box-shadow: -4rpx -4rpx 10rpx #666;
}

.r-box {
  box-shadow: 4rpx 4rpx 10rpx #666;
}

.left, .right {
  position: relative;
}

.left::after {
  content: ' ';
  position: absolute;
  top: -100rpx;
  right: -40rpx;
  border-width: 100rpx 40rpx;
  border-style: solid;
  border-color: transparent transparent #fff transparent;
}

.right::before {
  content: ' ';
  position: absolute;
  top: -100rpx;
  left: -40rpx;
  border-width: 100rpx 40rpx;
  border-style: solid;
  border-color: transparent transparent #fff transparent;
}

.shop, .address, .phone, .times {
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.location {
  width: 30rpx;
  height: 30rpx;
}

.goods>view {
  width: 95%;
}

.goods>view:nth-child(2)>view {
  width: 100%;
  padding: 20rpx 0;
}

.go {
  width: 24rpx;
  height: 24rpx;
}

.f-line {
  width: 100% !important;
  height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  z-index: 200;
}

.f-line>view {
  width: 170rpx;
  height: 65rpx;
  line-height: 65rpx;
  margin: 0 20rpx;
  border-radius: 35rpx;
}

.good-img {
  width: 100rpx;
  height: 100rpx;
  background: black;
}

.good-info {
  width: 80%;
}

