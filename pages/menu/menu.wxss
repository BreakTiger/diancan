@import "../../templates/tabline/tabline.wxss";

.shop {
  height: 120rpx;
  padding: 0 20rpx;
}

.loaction, .arrow {
  width: 24rpx;
  height: 24rpx;
}

.shop-info {
  height: 965rpx;
  padding: 0 20rpx;
  z-index: 200;
  position: fixed;
  top: 120rpx;
}

.go {
  width: 26rpx;
  height: 26rpx;
  margin-left: 15rpx;
}

.menu {
  width: 100%;
  height: 965rpx;
}

.left {
  width: 20%;
  height: 100%;
}

.right {
  width: 80%;
  height: 100%;
}

.nav-tab {
  width: 100%;
  height: 100rpx;
}

.nav-tab>text {
  width: 50%;
}

.search {
  width: 30rpx;
  height: 30rpx;
  margin: 0 10rpx;
}

.lineleft {
  position: relative;
}

.lineleft::before {
  content: '';
  width: 10rpx;
  height: 100rpx;
  background: #ff6235;
  position: absolute;
  left: 0rpx;
}

.menu-list-item {
  width: 100%;
  height: 235rpx;
  margin-bottom: 20rpx;
}

.menu-list-item>image {
  width: 160rpx;
  height: 160rpx;
  margin-left: 30rpx;
}

.item-info {
  width: 60%;
  height: 85%;
  margin-right: 20rpx;
}

.num>image, .icon {
  width: 40rpx;
  height: 40rpx;
}

.num>input, .nums {
  width: 60rpx;
  height: 24rpx;
  margin: 0 15rpx;
}

.shop-car {
  width: 195rpx;
  height: 80rpx;
  border-radius: 40rpx;
  border: 1rpx solid #666;
  position: fixed;
  left: 25rpx;
  bottom: 140rpx;
  z-index: 120;
}

.shop-car>image {
  width: 40rpx;
  height: 40rpx;
}

.g_nums {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  border: 6rpx solid #fff;
  background: #dea482;
  position: fixed;
  left: 180rpx;
  bottom: 185rpx;
  z-index: 125;
}

.price-line {
  width: 750rpx;
  height: 90rpx;
  position: fixed;
  bottom: 120rpx;
  z-index: 100;
  border-top: 1rpx solid #666;
}

.btn {
  width: 30%;
  height: 90rpx;
  line-height: 90rpx;
  background: #dea482;
}

.car-content {
  width: 750rpx;
  height: 450rpx;
  position: fixed;
  bottom: 210rpx;
  z-index: 110;
}

.title-line {
  width: 100%;
  height: 59rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.title-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.cars {
  width: 100%;
  height: 391rpx;
}

.car-item {
  width: 100%;
  height: 125rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.car-item>image {
  width: 100rpx;
  height: 100rpx;
}

.cars>view:last-child {
  border: none;
}

.sk-content {
  width: 100%;
  height: 1000rpx;
  position: fixed;
  bottom: 0rpx;
}

.sk-content>view:first-child {
  width: 100%;
  height: 220rpx;
  position: relative;
}

.close {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.goods-img {
  width: 180rpx;
  height: 180rpx;
  margin: 0 20rpx;
}

.good-info {
  width: 60%;
  height: 180rpx;
}

.sk-content>view:last-child {
  width: 90%;
  height: 75rpx;
  line-height: 75rpx;
  background: #2295fe;
  margin-top: 20rpx;
}

.sk-content>scroll-view {
  width: 100%;
  height: 670rpx;
}

.sk-line {
  width: 95%;
  margin: 0 auto;
  margin-top: 40rpx;
}

.sk-line:last-child {
  margin-bottom: 40rpx;
}

.sk-line>text {
  margin-bottom: 40rpx;
}

.laber {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 15rpx;
}

.active {
  background: #d3e7ff;
  color: #1faff1;
}
