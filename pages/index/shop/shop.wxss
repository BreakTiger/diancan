page {
  background: #f5f5f5;
}

.container>view:first-child {
  width: 100%;
}

.search {
  width: 92%;
  height: 80rpx;
  margin: 20rpx 0;
}

.search>icon {
  margin: 0 20rpx;
}

.search>input {
  width: 100%;
}

.location {
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
}

.shop-item {
  width: 90%;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.left {
  width: 70%;
  margin-left: 20rpx;
  position: relative;
}

.left::after {
  content: '';
  position: absolute;
  width: 5rpx;
  height: 120rpx;
  background: #f5f5f5;
  right: 0rpx;
  top: 0rpx;
}

.right {
  width: 20%;
  margin-right: 20rpx;
}
