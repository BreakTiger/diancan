/* 全局 */

page {
  height: 100%;
}

.container {
  width: 750rpx;
  height: auto;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  overflow: auto;
}

/* 弹性 */

.flex {
  display: flex;
}

.col {
  flex-direction: column;
}

.fl-w {
  flex-wrap: wrap;
}

.fl-align {
  align-items: center;
}

.fl-jc {
  justify-content: center;
}

.fl-jsb {
  justify-content: space-between;
}

.fl-jsa {
  justify-content: space-around;
}

.fl-jse {
  justify-content: space-evenly;
}

.fl-jsd {
  justify-content: flex-end;
}

/* 文字大小 */

.f25 {
  font-size: 25rpx;
}

.f28 {
  font-size: 28rpx;
}

.f32 {
  font-size: 32rpx;
}

/* 文字粗细 */

.f-w4 {
  font-weight: 400;
}

.f-wb {
  font-weight: bold;
}

/* 文字颜色 */

.c-00 {
  color: #000;
}

.c-66 {
  color: #666;
}

.c-ff {
  color: #fff;
}

/* 背景色 */

.b-ff {
  background: #fff;
}

.b-f5 {
  background: #f5f5f5;
}

/* 圆角 */

.b_rh {
  border-radius: 50%;
}

.b_r12 {
  border-radius: 12rpx;
}

.b_r20 {
  border-radius: 20rpx;
}

/* 超出省略 */

.climp1 {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.climp2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.climp3 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* 文本居中 */

.t-ac {
  text-align: center;
}

/* 遮罩 */

.cover {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  background: rgba(0, 0, 0, 0.3);
  overflow: hidden;
  z-index: 50;
}

.wh100 {
  width: 100%;
  height: 100%;
}

.w100 {
  width: 100%;
}

/* 删除线 */

.d-l {
  text-decoration: line-through;
}

/* 图标 */

.go {
  width: 24rpx;
  height: 24rpx;
}
